{% extends 'base.html.twig' %}

{% block title %}Liste des concerts!{% endblock %}

{% block body %}
<style>
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    .buttonCreateConcert {
        position: absolute;
        bottom: 160px;
        right: 10px;
    }

    .buttonSubmit {
        font-size: 120%;
        color: white;
        background-color: crimson;
        border: none;
        border-radius: .2em;
        box-shadow: black 0 0 7px;
    }

    .buttonSubmit:hover {
        text-shadow: white 0 0 3px;
        cursor: pointer;
        background-color: #8d0e27;
    }


    h2 {
        padding-bottom: 10px;
    }
</style>
    <h1>Liste des futurs concerts : </h1>

    {% if isNull %}
        <h2>Aucun concert à venir pour le moment...</h2>
    {% endif %}

    {% if isNull == false %}
        {% for c in theConcert %}
            <ul>
                <a href="display/{{ c.id }}"> {{ c.nameConcert}} </a>
            </ul>
        {% endfor %}
    {% endif %}

    <div class="buttonCreateConcert">
        <form action="{{ path("concert_create") }}">
            <button type="submit" class="buttonSubmit">Créer un nouveau concert</button>
        </form>
    </div>
{% endblock %}
