{% block body %}
    <style>
        .header-container {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 2em;
            min-height: 70px;
            width: 100%;
            position: fixed;
            top: 0;
            background-color: #7b7678;
            padding-left: 1%;
        }
        a {
            text-decoration: none;
        }

        .nav {
            font-size: 2em;
        }
        .hello {
            font-size: 1.2em;
        }

        .leftContent {
            display: flex;
            gap: 1em;
        }

        .rightContent {
            display: flex;
            gap: 0.3em;
            padding-right: 2%;
        }
    </style>

    <div class="header-container">
        <div class="leftContent">
            <div class="nav"><a href="{{ path("accueil") }}"> Accueil </a> </div>

            <div class="nav"><a href="{{ path("concert_list") }}">Concerts</a> </div>

            <div class="nav"><a href="{{ path("bands") }}"> Groupes </a> </div>
        </div>

        <div class="rightContent">
            {% if app.user %}
                <div class="hello"> Bonjour {{ app.user.firstName }} | </div>
                <div class="hello"><a href="{{ path("account", {'id': app.user.id }) }}"> Mon compte </a> </div>
            {% else %}
                <div class="nav"><a href="{{ path("app_login") }}"> Se connecter </a> </div>
            {% endif %}
        </div>

    </div>
{% endblock %}
